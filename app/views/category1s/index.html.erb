<body id="bg1">
  <div class="container" style="color:white">
    <div class="row">
      <%if user_signed_in? && current_user.admin==true %>
<!--      <div class="col-3">-->
        <div class="col-xs-12 col-sm-6 col-md-3" style="padding: 20px">
        <div class="text-center card1" style="width:200px;height: 200px">
        <%= link_to new_category1_path do %>
          <%= image_tag "avatar2/category.jpg", class: "rounded",style: "height:200px;width:200px" %>
          <div class="middle">
            <div class="text">Add New Categories</div>
          </div>
        </div>
        <% end %>
      </div>
        <%end %>
      <% @category1s.each do |category| %>
<!--      <div class="col-md-3 col-sm-6">-->
      <div class="col-xs-12 col-sm-6 col-md-3" style="padding: 20px">
        <div class="text-center card1" style="width:200px;height: 200px">
        <%#= link_to category1_path(category) do %>
          <%#= image_tag(@category.image) %>
          <%#= image_tag(category.image, :class=> "ui medium image",style: "height:100%;width:100%")  %>
          <% if category.image.attached? %>
            <%= image_tag(category.image, :class=> " rounded ",style: "height:100%;width:100%")  %>
          <%else %>
            <%= image_tag "avatar2/coming_soon.jpg", class: "rounded",style: "height:100%;width:100%" %>
          <%end %>
          <div class="middle1">
            <div class="text1">
              Visit <%= category.name %>
              <h3> Visit<br/><span><%= category.name %></span></h3><br/>
              <div class="content">
<!--                <div class="small ui green button" data-tooltip="price" data-position="bottom center">-->
<!--                  <span>&#3647;</span><%#= item.price %>-->
<!--                </div><br/>-->
                <!--                          <div class="small ui primary button">Book</div>-->
                <%#= link_to 'Book',category_item_path(params["category_id"],item) , class="small ui primary button" %>
                <% if user_signed_in? and current_user.admin==true  %>
                  <div class="left floated " data-tooltip="Delete item" data-position="bottom left">
                    <%#= link_to 'Destroy', category_item_path(params["category_id"],item), method: :delete, data: { confirm: 'Are you sure?' } ,class:"small ui red button"%>
                    <%= link_to 'Destroy', category1_path(category), method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-danger btn-sm" %>
                  </div>
                  <div class="left floated " data-tooltip="Book item" data-position="bottom left">
                    <h2><%=link_to 'View', category1_path(category) ,class:"btn btn-primary btn-sm"%></h2>
                  </div>
                  <div class="left floated " data-tooltip="Book item" data-position="bottom left">
<!--                    <h2><%#=link_to 'Items', category1_path(category) ,class:"btn btn-success btn-sm"%></h2>-->
                    <h2><%=link_to 'Items',  category1_items_path(category) ,class:"btn btn-success btn-sm"%></h2>
                  </div>
                <%else %>
                  <div class="left floated " data-tooltip="Book item" data-position="bottom left">
                    <h2><%=link_to 'Items', category1_path(category) ,class:"btn btn-primary btn-sm"%></h2>
                  </div>
                <%end %>


              </div>
            </div>
          </div>
        <%# end %>
        </div>
      </div>
      <%end %>
    </div>
