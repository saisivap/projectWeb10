                  <%= link_to"Edit Profile",  edit_user_registration_path,style: "font-weight:bold;font-size:15px"%><br/>
                  <%= link_to"My Orders",   myorders_path,style: "font-weight:bold;font-size:15px"%>
                <%end %>
                    </div>
            </div>
