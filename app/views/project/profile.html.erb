            <div class="card profile-card-5">
              <div class="card-img-block">
                <%= link_to  myposts_path(anchor: p.id) do  %>
                  <%if p.image.attached? %>
                     <%= image_tag(p.image, :class=> " card-img-top ",style: "height:100%;width:100%")  %>
                  <%else %>
                    <%= image_tag "avatar2/coming_soon.jpg", :class=> " profile mr-2" %>

                  <%#end %>
                    <%end %>
                <%end %>
              </div>
            </div>
