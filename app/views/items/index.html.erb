      <div class="col-xs-12 col-sm-6 col-md-3" style="padding: 20px">
        <div class="text-center card1" style="width:200px;height: 200px">
          <%= link_to new_category1_item_path do %>
            <%= image_tag "avatar2/category.jpg", class: "rounded",style: "height:200px;width:200px" %>
