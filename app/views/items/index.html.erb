      <div class="col-xs-12 col-sm-6 col-md-3" style="padding: 20px">
        <div class="text-center card1" style="width:200px;height: 200px">
          <%#= link_to category1_path(category) do %>
          <%#= image_tag(@category.image) %>
          <%#= image_tag(category.image, :class=> "ui medium image",style: "height:100%;width:100%")  %>
          <% if item.image.attached? %>
            <%= image_tag(item.image, :class=> " rounded ",style: "height:100%;width:100%")  %>
