<%= form_with(model: [@item], local: true,url: category1_items_path) do |form| %>
  <% if item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :category1_id %>
    <%#= form.text_field :category1_id %>
    <%= text_field_tag(Category1,value=Category1.find(params["category1_id"]).name,disabled: true) %>
  </div>
  <div class="field">
    <%= form.label :image,"Image" %>
    <%= form.file_field :image ,class:"ui button"%>
  </div>
  <div class="field">
    <%= form.label :price %>
    <%= form.text_field :price %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
