<div class="ui form">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name),class:"form-horizontal center",role:"form") do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="form-group">
      <%= f.label :first_name,"First Name" ,class: "col-md-4 control-label"%>
      <div class="col-md-10">
      <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control" %>
    </div>
    </div>
    <div class="form-group">
      <%= f.label :last_name,"Last Name" ,class: "col-md-4 control-label"%>
      <div class="col-md-10">
      <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control" %>
    </div>
    </div>
    <div class="form-group">
      <%= f.label :stID,"AIT Student ID ",class: "col-md-4 control-label" %>
      <div class="col-md-10">
      <%= f.text_field :stID, autofocus: true, autocomplete: "stID" , class: "form-control"%>
    </div>
    </div>
    <div class="form-group">
      <%= f.label :phone_number,"Phone Number ",class: "col-md-4 control-label" %>
      <div class="col-md-10">
      <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone number", class: "form-control" %>
    </div>
    </div>
    <div class="field">
      <%= f.label :country,"Country",class: "col-md-4 control-label" %>
      <div class="col-md-10">
      <%= f.text_field :country, autofocus: true, autocomplete: "stID", class: "form-control" %>
    </div>
    </div>
    <div class="form-group">
      <%= f.label :email ,"Email",class: "col-md-4 control-label"%>
      <div class="col-md-10">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>
    </div>

    <div class="form-group">
      <%= f.label :password ,"Password",class: "col-md-4 control-label"%>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <div class="col-md-10">
      <%= f.password_field :password, autocomplete: "new-password" , class: "form-control"%>
    </div>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation ,"Password Confirmation",class: "col-md-4 control-label"%>
      <div class="col-md-10">
      <%= f.password_field :password_confirmation, autocomplete: "new-password" , class: "form-control"%>
    </div>
    </div>

    <div class="actions">
      <%= f.submit "Sign up",class: "btn btn-primary" %>
    </div>
  <% end %>
